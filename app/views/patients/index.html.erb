<p id="notice"><%= notice %></p>

<% if user_signed_in? %>

<h1>Patients</h1>

<%= link_to 'Patient Search', new_search_path %>

  <%= form_tag patients_path, :method => 'get' do %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search by Surname" %>
  <% end %>


<br>
<br>



<div class="panel-body">
  <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
    <thead>
      <tr>
      <th>Firstname</th>
      <th>Surname</th>
      <th>D.O.B</th>
      <th>Diagnosis</th>
      <th>Location</th>
      <th>Admission Note</th>
      <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.firstName %></td>
        <td><%= patient.surName %></td>
        <td><%= patient.dob %></td>
        <td><%= patient.diagnosis %></td>
        <td><%= patient.location %></td>
        <td><%= patient.admissionNote %></td>
        <td><%= link_to 'Show', patient %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
        <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>

  </table>

</div>

<br>
<button>
  <%= link_to 'Create New Patient', new_patient_path %>
</button>





<% else %>

<h1>Welcome to Medical Records</h1>
<h3>Please sign up or log back in to continue</h3>
<% end %>
