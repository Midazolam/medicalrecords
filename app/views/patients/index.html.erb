<p id="notice"><%= notice %></p>

<% if user_signed_in? %>

<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Patient Lookup</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
           Search for a patient record
        </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-2"
          <%= form_tag patients_path, :method => 'get' do %>
          <%= text_field_tag :search, params[:search], class: "form-control"%>
          <br>
          <%= submit_tag "Search by Surname",class: "btn btn-primary" %>
          <hr>
          <%= button_to "Advanced Patient Search", new_search_path, class: "btn btn-primary", method: :get %>
          <hr>
            <%= button_to "Create New Patient Record", new_patient_path, class: "btn btn-primary", method: :get %>
          </div>
                




<div class="col-lg-10">
  
<% end %>

  <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
    <thead>
      <tr>
      <th>First Name</th>
      <th>Surname</th>
      <th>D.O.B</th>
      <th>Diagnosis</th>
      <th>Location</th>
      <th>Admission Note</th>
      <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.firstName %></td>
        <td><%= patient.surName %></td>
        <td><%= patient.dob %></td>
        <td><%= patient.diagnosis %></td>
        <td><%= patient.location %></td>
        <td><%= patient.admissionNote %></td>
        <td><%= link_to 'Show', patient %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
        <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>

  </table>
</div>





<% else %>

<div class="jumbotron">
    <h2>Welcome to Medical Records</h2>
    Medical Records is a quick and easy to use online electronic medical record system. Our intuitavive and clutter free interface allows clinicians become comfortable with the platform in minutes. The system will also manage your out patient appointments!</p>
    
      <%= button_to "Sign In", new_user_session_path, class: "btn btn-primary btn-lg", method: :get %>
    </p>
  </div>
<% end %>
