<%= form_with(model: patient, local: true) do |form| %>
  <% if patient.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(patient.errors.count, "error") %> prohibited this patient from being saved:</h2>

      <ul>
      <% patient.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <label>First Name:</label><br/>
    <%= form.text_field :firstName, class: "form-control", id: :patient_firstName %>
  </div>

  <div class="form-group">
    <label>Surname:</label><br/>
    <%= form.text_field :surName, class: "form-control", id: :patient_surName %>
  </div>

  <div class="form-group">
    <label>Date of Birth:</label><br/>
    <%= form.date_select :dob, class: "form-control", id: :patient_dob, :start_year=>1900,:end_year=>2020  %>
  </div>

  <div class="form-group">
    <label>Diagnosis:</label><br/>
    <%= form.text_field :diagnosis, class: "form-control", id: :patient_diagnosis %>
  </div>

  <div class="form-group">
    <label>Location:</label><br/>
    <%= form.text_field :location, class: "form-control", id: :patient_location %>
  </div>

  <div class="form-group">
    <label>Admission Note:</label><br/>
    <%= form.text_area :admissionNote, class: "form-control", id: :patient_admissionNote %>
  </div>


  <div class="form-group">
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
