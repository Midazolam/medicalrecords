    <%= form.label :dob %>
    <%= form.date_select :dob, id: :patient_dob %>
  </div>

  <div class="field">
    <%= form.label :diagnosis %>
    <%= form.text_field :diagnosis, id: :patient_diagnosis %>
  </div>

  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location, id: :patient_location %>
  </div>

  <div class="field">
    <%= form.label :admissionNote %>
    <%= form.text_area :admissionNote, id: :patient_admissionNote %>
  </div>

