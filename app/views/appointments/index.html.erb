<p id="notice"><%= notice %></p>

<% if user_signed_in? %>
<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Appointment Manager</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
           Your existing appointments
        </div>
      <div class="panel-body">
        
<table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Surname</th>
      <th>D.O.B</th>
      <th>Location</th>
      <th>Date & Time</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.firstname %></td>
        <td><%= appointment.surname %></td>
        <td><%= appointment.dob %></td>
        <td><%= appointment.loc %></td>
        <td><%= appointment.dateAp %></td>
        <td><%= appointment.note %></td>
        <td><%= link_to 'Show', appointment %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
        <td><%= link_to 'Delete', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<div class="panel-footer">

  <%= button_to "Book Appointment", new_appointment_path, class: "btn btn-primary", method: :get %>
</div>
</div>


<% else %>

<h1>Welcome to Medical Records</h1>
<h3>Please sign up or log back in to continue</h3>
<% end %>
