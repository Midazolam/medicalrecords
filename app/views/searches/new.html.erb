<div id="page-wrapper">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
		<h1>Patient Search</h1>
		</div>
		<div class="panel-body">
<%= form_for @search, html: {class: "pure-form"} do |s| %>

	<div class="field">
		<%= s.label :firstName %>
		<%= s.text_field :firstName %>
	</div>

	<div class="field">
		<%= s.label :surName %>
		<%= s.text_field :surName %>
	</div>

	<div class="field">
		<%= s.label :location %>
		<%= s.text_field :location %>
	</div>

	<div class="field">
		<%= s.label :diagnosis %>
		<%= s.text_field :diagnosis %>
	</div>

	
	</div>
	<div class="panel-footer">
	<div class="actions">
		<%= s.submit "Search", class: "btn btn-primary" %>
	</div>

<% end %>
